
@{
    ViewData["Title"] = Serenity.LocalText.Get("Db.Default.Transactions");
}
<h1>TAX INVOICE</h1>

<table class="table table-bordered" style="text-align: left;">

    <thead>

        <tr>
            <th scope="col">Checks</th>
            <th scope="col">#</th>
            <th scope="col">Particulars</th>
            <th scope="col">Amount</th>
        </tr>

    </thead>
    <tbody>


        @for (int i = 0; i < @Model.TransactionItems.Count; i++)
        {
            var transactionItem = @Model.TransactionItems[i];

            <tr>
                <td><input id="checkedItem" type="checkbox"></td>
                <td>@(1+i)</td>
                <td>@transactionItem.Item.Name</td>
                <td>@transactionItem.Item.Price</td>


            </tr>
        }
    </tbody>
</table>


<textarea id="amountArea" rows="1" name="amountAre" style="width:80px" disabled>15</textarea>

<form role="form" asp-action="PayButton" asp-controller="Transactions" method="post">
    <input type="submit" value="Login" class="btn btn-info btn-block">
</form>
<label style="margin-right:20px">:Total Amount</label>

